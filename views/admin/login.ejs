<% layout('layout/adminBoilerplate') -%>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Sign In</h1>
    <form novalidate action="/admin" method="post" class="form-validation">
      <div class="mb-3">
        <label for="adminId" class="form-label">Admin Id</label>
        <input
          type="text"
          name="adminId"
          id="adminId"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Sign In</button>
    </form>
  </div>
</div>
